<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/blankFragment">


    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.activediet.fragments.BlankFragment"
        android:label="@string/hello_blank_fragment"
        tools:layout="@layout/fragment_blank" >
        <action
            android:id="@+id/action_blankFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_blankFragment_to_dailyFragment"
            app:destination="@id/dailyFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_blankFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_blankFragment_to_stepFragment"
            app:destination="@id/stepFragment" />
    </fragment>

    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.activediet.fragments.CalculatorFragment"
        android:label="@string/calculate_bmr"
        tools:layout="@layout/fragment_calculator" >
        <action
            android:id="@+id/action_calculatorFragment_to_dailyFragment"
            app:destination="@id/dailyFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.activediet.fragments.WelcomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"
            android:id="@+id/action_welcomeFragment_to_dailyFragment"
            app:destination="@id/dailyFragment" />
    </fragment>
    <fragment
        android:id="@+id/dailyFragment"
        android:name="com.example.activediet.fragments.DailyFragment"
        android:label="Daily calories"
        tools:layout="@layout/fragment_daily" >
        <action
            android:id="@+id/action_dailyFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_dailyFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
        <action
            android:id="@+id/action_dailyFragment_to_blankFragment2"
            app:destination="@id/blankFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.activediet.fragments.SearchFragment"
        android:label="Add Ingredient"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="mealID"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="date"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/stepFragment"
        android:name="com.example.activediet.fragments.StepFragment"
        android:label="step_counter"
        tools:layout="@layout/step_counter" >
        <action
            android:id="@+id/action_stepFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
</navigation>