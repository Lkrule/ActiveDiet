<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">


    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.activediet.fragments.WelcomeFragment"
        android:label=""
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_welcomeFragment_to_dailyFragment"
            app:destination="@id/dailyFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_welcomeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_dbFragment"
            app:destination="@id/dbFragment" />
    </fragment>

    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.activediet.fragments.food.CalculatorFragment"
        android:label="@string/calculate_bmr"
        tools:layout="@layout/fragment_calculator" >
        <action
            android:id="@+id/action_calculatorFragment_to_dailyFragment"
            app:destination="@id/dailyFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/dailyFragment"
        android:name="com.example.activediet.fragments.food.DailyFragment"
        android:label=""
        tools:layout="@layout/fragment_daily" >
        <action
            android:id="@+id/action_dailyFragment_to_addCustomFoodFragment"
            app:destination="@id/addCustomFoodFragment" />
        <action
            android:id="@+id/action_dailyFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCustomFoodFragment"
        android:name="com.example.activediet.fragments.food.AddCustomFoodFragment"
        android:label=""
        tools:layout="@layout/fragment_add_custom_food"
        >
        <argument
            android:name="mealID"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="date"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.activediet.fragments.run.StatisticsFragment"
        android:label=""
        tools:layout="@layout/fragment_statistics"/>

    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.example.activediet.fragments.run.TrackingFragment"
        android:label=""
        tools:layout="@layout/fragment_tracking"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.activediet.fragments.SettingsFragment"
        android:label=""
        tools:layout="@layout/fragment_settings"/>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.activediet.fragments.NotificationFragment"
        android:label=""
        tools:layout="@layout/fragment_notification"/>


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.activediet.fragments.food.SearchFragment"
        android:label=""
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="mealID"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="date"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dbFragment"
        android:name="com.example.activediet.fragments.DbFragment"
        android:label="Active Diet" >
        <action
            android:id="@+id/action_dbFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>


</navigation>