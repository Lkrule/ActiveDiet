<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:background="#bde3ee">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="76dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/workout_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/biceppng" />

            <LinearLayout
                android:layout_width="196dp"
                android:layout_height="62dp"
                android:layout_marginStart="20dp"
                android:background="#4fcef2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/workoutLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The WorkOut"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Button_to_link_maybe"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#3c7d8f"
                    android:text="button_to_link_maybe" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="76dp"
            android:layout_marginVertical="10dp"
            android:background="#9af4e5"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/food_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/foodsjpg" />

            <LinearLayout
                android:background="#36c3ac"
                android:layout_width="196dp"
                android:layout_height="62dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:background="#68f0da"
                    android:id="@+id/foodId"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:text="@string/healthy_recipes"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoryId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="button_to_link_maybe" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="76dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/changepic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/biceppng" />

            <LinearLayout
                android:layout_width="196dp"
                android:layout_height="62dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/changeId"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:text="@string/healthy_recipes"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/changeLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="button_to_link_maybe" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>